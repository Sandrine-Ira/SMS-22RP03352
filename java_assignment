    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        String field1=txtname.getText();
       String field2=txtregno.getText();
       
        try{
       
       int field3=Integer.parseInt(txtmath.getText());
       int field4=Integer.parseInt(txtjava.getText());
       int field5=Integer.parseInt(txtphp.getText());
         if(field3<0 || field3>100 || field4<0 || field4>100 || field5>100 || field5<0) {
             JOptionPane.showMessageDialog(null,"the marks shoul be between 0 and 100" );
             txtname.setText("");
             txtregno.setText("");
             txtmath.setText("");
             txtjava.setText("");
             txtphp.setText("");
         }
             else{
             DefaultTableModel tablemodel=(DefaultTableModel)table1.getModel();
       //String [] data  ={field1,field2,field2};
       //tablemodel.addRow(data);
       
      
      
       try{
            Connection conn=null;
       Statement stmnt=null;
       String  url="jdbc:mariadb://localhost:3306/theclass";
       String username="root";
       String password=""; 
       conn=DriverManager.getConnection(url,username,password);
       stmnt=conn.createStatement();
       
             String sql="INSERT INTO system(name,regno,math,java,php)values(?,?,?,?,?)";
     //stmnt.executeUpdate(sql);
     PreparedStatement pstm=conn.prepareStatement(sql);
     pstm.setString(1, field1);
     pstm.setString(2, field2);
     pstm.setInt(3, field3);
     pstm.setInt(4, field4);
     pstm.setInt(5, field5);
     pstm.executeUpdate();
     ResultSet rs=stmnt.executeQuery("SELECT*FROM SYSTEM");
     tablemodel.setRowCount(0);
     while(rs.next()){
     String name=rs.getString("name");
     String regno=rs.getString("regno");
     int math=rs.getInt("math");
     int java=rs.getInt("java");
     int php=rs.getInt("php");
     int avg=(math+java+php)/3;
     //tablemodel.addRow(new object[]={na});
     tablemodel.addRow(new Object[]{name, regno,avg});
     }
       }
       
       catch(Exception e){
           JOptionPane.showMessageDialog(this,"error "+e );
           
       }

     
     
       
                     }
         
      
}
catch(Exception e){
     JOptionPane.showMessageDialog(this,"Please enter vaid numerric values for marks " );
}
       

    }                                        
    
    
  
